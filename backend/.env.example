# ===============================
# EPTEC BACKEND ENV — FINAL
# ===============================

PORT=8080
NODE_ENV=production

# -------------------------------
# CORS (Whitelist / CSV)
# -------------------------------
# GitHub Pages Origin (EXAKT: https + host, KEIN trailing slash)
CORS_ORIGIN=https://pghenke88-dot.github.io

# Optional: lokal testen (nur wenn du lokal wirklich darauf zugreifst)
# CORS_ORIGIN=https://pghenke88-dot.github.io,http://localhost:8080,http://127.0.0.1:8080

# -------------------------------
# Public Base URL (Verify/Reset Links)
# -------------------------------
# DEINE echte Backend URL (https, ohne trailing slash)
PUBLIC_BASE_URL=https://YOUR-BACKEND-DOMAIN

# -------------------------------
# JWT (PROD: setzen!)
# -------------------------------
# Sehr lang & zufällig (mind. 64 Zeichen empfohlen)
JWT_SECRET=REPLACE_WITH_LONG_RANDOM_SECRET

# -------------------------------
# SQLite
# -------------------------------
DB_FILE=./eptec.db

# -------------------------------
# Mail
# -------------------------------
# Phase 1: nur loggen, keine echten E-Mails senden
MAIL_LOG_ONLY=true

# Phase 2: MAIL_LOG_ONLY=false + echte SMTP Daten setzen
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_user
SMTP_PASS=your_pass

MAIL_FROM="EPTEC <no-reply@eptec.example>"
