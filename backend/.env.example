# ===============================
# EPTEC BACKEND ENV — FINAL
# (GitHub Pages Frontend + External Backend)
# ===============================

PORT=8080
NODE_ENV=production

# -------------------------------
# CORS
# -------------------------------
# GitHub Pages Origin (MUSS exakt passen: https + host)
CORS_ORIGIN=https://pghenke88-dot.github.io

# Optional (nur wenn dein Backend mehrere Origins als CSV unterstützt):
# CORS_ORIGIN=https://pghenke88-dot.github.io,http://localhost:8080,http://127.0.0.1:8080

# -------------------------------
# Public Base URL (für Verify/Reset Links in Mails)
# -------------------------------
# SETZE DAS AUF DEINE ECHTE BACKEND-URL (ohne trailing slash)
PUBLIC_BASE_URL=https://YOUR-BACKEND-DOMAIN

# -------------------------------
# JWT
# -------------------------------
# LANG + ZUFÄLLIG (mind. 32+ chars, besser 64+)
JWT_SECRET=REPLACE_WITH_LONG_RANDOM_SECRET

# -------------------------------
# Mail
# -------------------------------
# Phase 1: nur loggen, keine echten Mails versenden
MAIL_LOG_ONLY=true

# Phase 2: MAIL_LOG_ONLY=false und echte SMTP Daten setzen
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_user
SMTP_PASS=your_pass

# RFC-konformes "Name <email>"
MAIL_FROM="EPTEC <no-reply@eptec.example>"
