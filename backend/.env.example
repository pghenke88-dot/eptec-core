PORT=8080
NODE_ENV=production

# Damit GitHub Pages dein Backend anrufen darf:
CORS_ORIGIN=https://pghenke88-dot.github.io

# Öffentliche Backend-URL (für Mail-Links):
PUBLIC_BASE_URL=https://YOUR-BACKEND-DOMAIN

# JWT Secret (lang + zufällig!)
JWT_SECRET=REPLACE_WITH_LONG_RANDOM_SECRET

# SMTP (oder fürs Testen Mail-Log aktivieren)
MAIL_LOG_ONLY=true

SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_user
SMTP_PASS=your_pass
MAIL_FROM="EPTEC <no-reply@eptec.example>"
